
#index-banner.section.no-pad-bot
  .container
    .row

      %h3.thin{:style => "margin: 40px 0; font-size: 32px; letter-spacing: 1.5px; text-color: #002557;"}
        %i.material-icons.prefix{:style => "font-size: 28px;"} settings_applications
        User Configurations
      %h6.caption.thin{:style => "margin-top: -25px; margin-bottom: 45px;"}
        Generate user configurations CSV

      .col.s12{:style => "margin-left: 30px"}
        .col.s8.push-s2{:style => "margin-top: 10px;"}
          .flash
            = render partial: "shared/flash_messages", flash: flash
        .col.s5
          %h6{:style => "margin-bottom: 10px"}
            Enter password to generate CSV:
        .col.s12
          .col.s4.push-s1{:style => "margin-top: 20px"}
            %form.form-horizontal{:role => "form", :method => "post", :action => generate_csv_path, :name => "myForm"}
              .form-group{:style => "inline"}
                %label.control-label.col-sm-2{:for => "password"} Password:
                %input#password.form-control.validate{:placeholder => "demo1234", :type => "password", :name => "password", :required => ""}
              .form-group{:style => "inline"}
                %button.waves-effect.btn.white.black-text{:type => "submit", :style => "text-decoration: none;"} Generate

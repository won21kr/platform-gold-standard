        -# Movies tab content
        .col.s12#movies{:style => "margin-top: 30px"}
          .col.s12
            - @movieItems.each do |f|
              .card
                .card-image.waves-effect.waves-block.waves-light
                  %img.activator{:src => download_url(f.imageId)}
                .card-content
                  %span.card-title.activator.grey-text.text-darken-4
                    = f.network
                    %i.material-icons.right more_vert
                  %p
                    %a{"data-lity" => "", :href => preview_url(f.videoId)}
                      = f.videoName.split('.').first
                .card-reveal
                  %span.card-title.grey-text.text-darken-4
                    More Info
                    %i.material-icons.right close
                  %h6{:style => "margin-top: 30px"}
                    %b Description:
                  %p
                    =  f.videoDescription
                  %h6{:style => "margin-top: 30px"}
                    %b Related Names:
                  %p
                    =  f.staring
                  %h6{:style => "margin-top: 30px"}
                    %b Content Rating:

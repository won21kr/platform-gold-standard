.body
  .container
    .row
      %h6{:style => "margin-top: 20px; margin-bottom: 25px;"}
        Build Your App Below
      %form{:action => save_config_path, :method => "post", :role => "form"}
        .col.s5.push-s1
          %b Custom Branding
          .br{:style => "margin-bottom: 12px"}
          -# %label.label-div{:for => "message"} Home Page Message
          -# %input.form-control#message{:type => "text", :name => "message", :placeholder => session[:home_message].nil? ? "The Box Platform" : session[:home_message]}

          %label.label-div{:for => "logo", :style => "color: black"} Company Logo URL
          %input.form-control#logo{:type => "text", :name => "logo", :placeholder => session[:logo].nil? ? "logo.png" : session[:logo], :style => "color: black"}

          %label.label-div{:for => "navbar_color", :style => "color: black"} Navbar Background Color
          %input.form-control#navbar_color{:type => "text", :name => "navbar_color", :placeholder => session[:navbar_color].nil? ? "FFFFFF" : session[:navbar_color][1..-1], :style => "color: black"}

          %label.label-div{:for => "background", :style => "color: black"} Background Image URL
          %input.form-control#background{:type => "text", :name => "background", :placeholder => session[:background].nil? ? "background.jpg" : session[:background], :style => "color: black"}

          %label.label-div{:style => "color: black"} Product Catalog
          .input-field{:style => "margin-top: 0 !important"}
            %select{:name => "catalog_file"}
              %option{:disabled => "", :selected => "", :value => ""} Choose your option
              %option{:value => "Retail", :placeholder => session[:catalog_file].nil? ? "Retail" : session[:catalog_file]} Retail - Default
              %option{:value => "Healthcare", :placeholder => session[:catalog_file].nil? ? "Healthcare" : session[:catalog_file]} Healthcare
              %option{:value => "Financial Services", :placeholder => session[:catalog_file].nil? ? "Financial Services" : session[:catalog_file]} Financial Services
              %option{:value => "AEC", :placeholder => session[:catalog_file].nil? ? "AEC" : session[:catalog_file]} AEC

        .col.s6.push-s2
          -# Activate / Deactivate feature tabs
          %b{:for => "tab_select"} Active Feature Tabs
          %p
            %input#vault{:type => "checkbox", :name => "vault", :checked => true, :disabled => "on"}
            %label.checkbox{:for => "vault", :style => "color: black"} My Vault
          %p
            %input#resources{:type => "checkbox", :name => "resources", :checked => session[:resources] == 'on'}
            %label.checkbox{:for => "resources", :style => "color: black"} Resources
          %p
            %input#onboarding{:type => "checkbox", :name => "onboarding", :checked => session[:onboarding] == 'on'}
            %label.checkbox{:for => "onboarding", :style => "color: black"} Onboarding Tasks
          %p
            %input#catalog{:type => "checkbox", :name => "catalog", :checked => session[:catalog] == 'on'}
            %label.checkbox{:for => "catalog", :style => "color: black"} Product Catalog
          %p
            %input#credentialing{:type => "checkbox", :name => "medical_credentialing", :checked => session[:medical_credentialing] == 'on'}
            %label.checkbox{:for => "credentialing", :style => "color: black"} Medical Credentialing (Healthcare)
          %p
            %input#loan_docs{:type => "checkbox", :name => "loan_docs", :checked => session[:loan_docs] == 'on'}
            %label.checkbox{:for => "loan_docs", :style => "color: black"} Loan Documents (Financial Services)
          %p
            %input#uploadsign{:type => "checkbox", :name => "uploadsign", :checked => session[:upload_sign] == 'on'}
            %label.checkbox{:for => "uploadsign", :style => "color: black"} Upload & Sign (DocuSign)

        .col.s12
          %button.btn.waves-effect.white.black-text{:style => "font-color: #263238 !important; text-decoration: none;", :type => "submit", :style => "margin-top: 10px;"}
            Submit

    %h6{:style => "margin-top: 40px; margin-bottom: 20px;"}
      Current Configuration
    %table.table.striped
      %thead
        %tr
          %th Attribute Name
          %th Attribute Value
      %tbody
        -# %tr
        -#   %td Company Name:
        -#   %td
        -#     = session[:home_message]
        %tr
          %td Logo:
          %td
            %img{:src => session[:logo], :style => "max-height:100px"}
        %tr
          %td Navbar Background Color:
          %td
            = session[:navbar_color]
        %tr
          %td Active Feature Tabs
          %td
            = "My Vault"
            - if (session[:resources] == 'on')
              = ", Resources"
            - if (session[:onboarding] == 'on')
              = ", Onboarding Tasks"
            - if (session[:catalog] == 'on')
              = ", Product Catalog"
            - if (session[:medical_credentialing] == 'on')
              = ", Medical Credentialing"
            - if (session[:loan_docs] == 'on')
              = ", Loan Documents"
            - if (session[:upload_sign] == 'on')
              = ", Upload & Sign"
        %tr
          %td Customized Product Catalog:
          %td
            = session[:catalog_file]
        %tr
          %td Encoded Configuration URL:
          %td
            = session[:config_url]

    .br{:style => "margin-bottom: 40px"}
    %form.item{:action => reset_config_path, :method => "get"}

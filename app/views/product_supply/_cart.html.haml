#message
#cart-div
  %table.table
    %thead
      %tr
        %th Product
        %th Quantity
    %tbody
      %input{:name => 'orders', :value => cartItems, :type => "hidden"}
      - cartItems.each_with_index do |item, i|
        %tr
          %td
            = item['name']
          %td
            = item['value']
  - if cartItems.size > 0
    %button.btn.pull-right.white.black-text#cartCheckout{:type => "submit", style: "margin-top: 10px; text-decoration: none", :onclick => "preloader();"} Order

:javascript


  function preloader() {
    $('#cart-div').css('display','none');
    $('#cart').addClass('preloader');
  }

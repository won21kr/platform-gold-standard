

%h5(style="margin-top: -5px; font-size: 120%;")
  - if (session[:current_page] == "resources")
    = link_to '<< Back to Resources', resources_path
  - else
    = link_to '<< Back to My Vault', dashboard_id_path(session[:current_folder])

.container
  .col-md-9
    %h3
      Document View
    - if @file.name.downcase.end_with?('.png') or @file.name.downcase.end_with?('.jpg')
      /= link_to '#', :onload => "$('#image_preview').attr('src','#{download_url(@file.id)}'); " do
      /%img{:id => 'image_preview', :width => '100%', "$('#image_preview').attr('src','#{download_url(@file.id)}'); "}
      %img{:id => 'image_preview', :width => '100%', :height => "600", :src => download_file_url(@fileId), :allowfullscreen => 'allowfullscreen'}

      /%iframe{:height => "600", :width => "100%", :src => download_file_url(@fileId)}
    - else
      %iframe{:height => "600", :width => "100%", :src => preview_url(@fileId), :allowfullscreen => 'allowfullscreen'}
  .col-md-3
    %h3
      Comment Stream:
    %ul.commentList
      - @comments.each do |c|
        %li
          .commenterImage
            - if (c.created_by.id == session[:box_id])
              %img{:src => session[:userinfo][:info][:image]}
            - else
              %img{:src => get_thumbnail(c.created_by.id)}

          .commentText
            %p
              = c.message
            %span.date.sub-text
              = DateTime.strptime(c.created_at).strftime("%e/%d/%y at %l:%M %p")
    %form.form-inline{:role => "form", :action => comment_path(@fileId), :method => "post"}
      = token_tag
      .form-group{:style => "width: 100%"}
        %textarea.form-control{:style => "width: 100%", :rows=>"4", :placeholder => "Add a comment", :type => "text", :name => "comment"}
      .form-group{:style => "margin-bottom: 30px"}
        %button.btn.btn-default{:style => "margin-top: 5px"} Post


:javascript

  $(document).ready(function() {
    $('#image_preview').attr('src','#{download_url(@file.id)}');
  });

  .col.s3{"data-lity" => "", :style => "height: 555px; background: #fff; margin-left: 80%; z-index: 99999; position: relative;"}
    %ul.commentList{:style => "padding-top: 1px;"}
      / list comments in chronological order associated with each file
      - @comments.each do |c|
        %li
          .commenterImage
            - if (c.created_by.id == ENV['EMPL_ID'])
              = image_tag "empl.png"
            - elsif (c.created_by.id == ENV['CRED_SPECIALIST'])
              = image_tag "credentialist.png"
            - else
              = image_tag "new_user.png"
          .commentText
            %p
              = c.message
            %span.date.sub-text
              = DateTime.strptime(c.created_at).strftime("%m/%d/%y at %l:%M %p")
    / allow user to enter new comment attached to file
    %form.form-inline{:role => "form", :action => comment_path(@fileId), :method => "post"}
      = token_tag
      .commentbox
        %label{:for => "comment", :style => "left: 0"} Add a comment
        %textarea.input{:style => "height: 100%; width: 95%; background-color: #fff;", :rows => "2", :cols => "65", :name => "comment", :required => true, :placeholder => "Write a comment..."}
      .form-group{:style => "margin-bottom: 20px"}
        %button.waves-effect.btn.white.black-text{:style => "margin-top: 5px; width: 95%; font-size: 11px;"} Post



.modal.fade#viewModal1{tabindex:"-1", role:"dialog", "aria-labelledby" => "myModalLabel", "aria-hidden" => "true"}
  .modal-dialog
    .modal-body(style="overflow: hidden;")
      %iframe{:id => 'preview', :width => '100%', :height => '100%', :frameBorder => '0', :allowfullscreen => 'allowfullscreen'}
    .modal-footer
      %button{type:"button", class:"btn btn-default btn-small", "data-dismiss"=>"modal"}
        Close

.modal.fade#viewModal2{tabindex:"-1", role:"dialog", "aria-labelledby" => "myModalLabel", "aria-hidden" => "true"}
  .modal-dialog
    .modal-body(style="overflow: hidden;")
      %img{:id => 'image_preview', :width => '100%'}
    .modal-footer
      %button{type:"button", class:"btn btn-default btn-small", "data-dismiss"=>"modal"}
        Close
.home
.container
  .col-md-12.col-sm-12.pull-right
    .panel.panel-default
      .panel-heading
        %h2 My Vault
        .sub-title
          = "Here are your personal & shared files"
      %table.table
        %thead
          %tr
            %th File
            %th Name
            %th Date Uploaded
            %th Actions
          %tbody
            %ul#tabs.nav.nav-pills{:role => "tablist", :style => "margin-top: 10px; font-size: 60%; font-weight: 400"}
              %li{:class => "#{'active' if @myFolder.id == @currentFolder}"}
                = link_to @myFolder.name, dashboard_id_path(@myFolder.id)
              %li{:class => "#{'active' if @sharedFolder.id == @currentFolder}"}
                = link_to @sharedFolder.name, dashboard_id_path(@sharedFolder.id)
          - @files.each do |f|
            %tr
              %td
                = image_tag(thumbnail_url(f.id), width: '30px')
              %td
                = f.name
              %td
                = f.created_at
              %td
                .btn-group
                  %a.btn.btn-default.btn-md{href: dashboard_id_path(@myFolder.id), 'data-toggle'=>'tooltip', 'data-placement'=>'top', 'data-container'=>'body', 'title'=>'Share with Advisor'}
                    %span.glyphicon.glyphicon-share
                  %a.btn.btn-default.btn-md{href: dashboard_id_path(@myFolder.id), 'data-toggle'=>'tooltip', 'data-placement'=>'top', 'data-container'=>'body', 'title'=>'Download'}
                    %span.glyphicon.glyphicon-cloud-download
                  %a.btn.btn-default.btn-md{href: dashboard_id_path(@myFolder.id), 'data-toggle'=>'tooltip', 'data-placement'=>'top', 'data-container'=>'body', 'title'=>'Delete'}
                    %span.glyphicon.glyphicon-trash
          %tr
            .tab-content
              .drop-area
                .row
                  .col-md-12
                    = simple_form_for(:vault, html:{class: 'dropzone', id:'my-dropzone'}, url: upload_url(@currentFolder))  {}


:javascript
  Dropzone.options.myDropzone = {
    init: function() {
      this.on("queuecomplete", function(file) {
        setTimeout(function() {location.reload();}, 2000);
      });
    }
  };


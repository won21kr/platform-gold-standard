    / SIDEBAR MENU
    .profile-usermenu
      %ul.nav.nav-pills.nav-stacked.appnavbtns
        %li
          %a{:href => "/dashboard"}
            %i.glyphicon.glyphicon-home
            My Vault
        %li
          %a{:href => "/resources"}
            %i.glyphicon.glyphicon-user

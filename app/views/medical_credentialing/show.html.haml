
#index-banner.section.no-pad-bot
  .container
    %h3.thin{:style => "margin-left: 165px; margin-top: 40px; font-size: 28px; letter-spacing: 1.5px; text-color: #002557;"}
      %span.glyphicon.glyphicon-plus{:style => "font-size: 22px;"}
      Medical Credentialing
    %h6.caption.thin{:style => "margin-left: 165px; font-size: 16px;"}
      Please complete the medical credentialing process

.container
  = render 'layouts/sidenav'
  .row
    - if (@status == "toFill")
      = render 'medical_form'
    - elsif (@status == "toUpload")
      = render 'upload_medical'
    - elsif (@status == "pendingApproval")
      = render 'medical_pending'
    - elsif (session[:progress] == 3)
      = render 'medical_approved'








-# Modals for upload suggestions
#loanVaultDocs.modal{:style => "z-index: 9999999 !important;"}
  .modal-content
    %h5{:style => "margin-bottom: 35px;"} Loan Agreement Suggestions
    .collection.with-header
      .collection-header
        Suggested items from My Vault
      - if !@searchFiles["Loan"].nil?
        - @searchFiles["Loan"].each do |f|
          %a.collection-item{:href => copy_from_vault_path(f.id, new_name: "Loan Agreement - Signature Needed", old_name: f.name), :style => "text-decoration: none;"}
            = f.name
  .modal-footer
    %a.modal-action.modal-close.btn-flat.modal-trigger{:href => "#loanModal", :style => "text-decoration: none;"}
      Upload New Loan Agreement


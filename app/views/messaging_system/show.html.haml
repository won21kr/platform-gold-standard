.container
  .row
    .index-banner.section.no-pad-bot
  %img{:src => "http://logonoid.com/images/city-national-bank-logo.png", :width => "250px"}
  %div{:style => "margin-top: 20px; width: 100%; height: 52px; background-color: #013e75"}
    %ul.msg-header-list
      %li.msg-list-item.left
        %a{:href => "/"} Home
      %li.msg-list-item.left
        %a{:href => "/"} Admin
      %li.msg-list-item.left
        %a{:href => "/"} Support Services
      %li.msg-list-item.left
        %a{:href => "/"} Reporting
      %li.msg-list-item.right
        %a{:href => "/"}
          %i.material-icons.prefix{:style => "font-size: 28px;"} email
      %li.msg-list-item.right
        %a{:href => "/"}
          %i.material-icons.prefix{:style => "font-size: 28px;"} call
      %li.msg-list-item.right
        %a{:href => "/"}
          %i.material-icons.prefix{:style => "font-size: 28px;"} live_help
      %li.msg-list-item.right
        %a{:href => "/"}
          %i.material-icons.prefix{:style => "font-size: 28px;"} search

  .row
    .col.m12.l10.push-l1{:style => "margin-top: 25px;"}
      // Title
      .col.s12
        %h3.thin{:style => "margin-top: 40px; font-size: 28px; letter-spacing: 1.5px; text-color: #002557;"}
          %i.material-icons.prefix{:style => "font-size: 28px;"} email
          = alt_text("Message Center")

      -# Messages
      .col.s3.message-tabs
        %a.btn.white.black-text{:href => "/compose-message"} Compose

        .row
          .col.s9
            %h6.col.s9 Inbox
            %h6.col.s2 0
          .col.s9.sent-selected
            %h6.col.s9 Sent
            %h6.col.s2
              = @messages.size
          .col.s9
            %h6.col.s9 Deleted
            %h6.col.s2 0

      -# Inbox Display
      .col.s9{:style => "margin-top: 20px"}
        %table
          %thead
            %h5 Messages
            %tr
              %th Collaborators
              %th Subject
              %th
          %tbody
            - if @messages.size == 0
              %tr
                %td
                  %span
                    %i.material-icons error
                    Notice! No current items exist in this folder
            - else
              - @messages.each do |message|
                %tr
                  %td
                    - @collaborators.each do |collaborator|
                      = collaborator.accessible_by.login
                  %td
                    %a{:href => "/show-message/" + message.id, :style => "text-decoration: none; color: #333333"}
                      = message.name
                  %td
                    %a.waves-effect.btn.white.black-text{:href => "/delete-message/" + message.id, :style => "text-decoration: none"} Delete

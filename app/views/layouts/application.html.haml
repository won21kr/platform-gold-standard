!!!
%html{:lang => "en"}
  %head
    %title
      Box Platform Standard
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}
    %meta{:content => "yes", :name => "apple-mobile-web-app-status-bar-style"}

    = include_gon
    = stylesheet_link_tag    '//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css'
    = stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css'
    = stylesheet_link_tag    '//fonts.googleapis.com/icon?family=Material+Icons'
    = stylesheet_link_tag    '//fonts.googleapis.com/css?family=Open+Sans:100,200,400,300,600'
    = stylesheet_link_tag    '//s3-us-west-1.amazonaws.com/box-dicom/v1.1.0/dist/css/amsterdam/overrides/typography.css'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    
    = javascript_include_tag '//s3-us-west-1.amazonaws.com/box-dicom/v1.1.0/dist/js/preview/dicom/dicom-en-US.min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'
    = javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = yield :auth0_code
    = csrf_meta_tags

    - if current_page?(config_url)
      %body{:style => "background-color: #fff"}
        .container
          = yield
    - else
      %body
        .container
          = yield

:javascript
  var lock = new Auth0Lock('#{ENV["AUTH0_CLIENT_ID"]}', '#{ENV["AUTH0_DOMAIN"]}');

  function signin() {
    lock.show({
        callbackURL: '#{ENV["AUTH0_CALLBACK"]}',
        responseType: 'code',
        authParams: {scope: 'openid profile'}
    });
    lock.show({
      dict: {
        signup: {
          title: "These will be your permanent demo credentials.",
          headerText: "Write them down!"
        }
      }
    });
  }

:javascript
  var lock = new Auth0Lock('#{ENV["AUTH0_CLIENT_ID"]}', '#{ENV["AUTH0_DOMAIN"]}');

    lock.show({
        container: 'root',
        callbackURL: '#{ENV["AUTH0_CALLBACK"]}',
        responseType: 'code',
        authParams: {
        scope: 'openid profile'
      }
    });

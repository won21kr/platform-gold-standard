.signin-button
  .tagline(style="font-size: 140%; margin-top: -170px; margin-bottom: 200px; color: #8F8D8E; font-family: 'junction-regular', sans-serif; letter-spacing: 2px;")
    %p
      %center(style="font-size: 80%; !important; color: #8F8D8E; letter-spacing: 3px; margin-top: -255px;")
        Settings | Remember Login?


:javascript
  var lock = new Auth0Lock('#{ENV["AUTH0_CLIENT_ID"]}', '#{ENV["AUTH0_DOMAIN"]}');

  function signin() {
    lock.show({
        callbackURL: '#{ENV["AUTH0_CALLBACK"]}',
        responseType: 'code',
        authParams: {scope: 'openid profile'}
    });
  }
